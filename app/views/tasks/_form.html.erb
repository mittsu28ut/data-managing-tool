<%= form_with(model: task, local: true) do |form| %>

  <% if @task.errors.any? %>
    <div id="error_explanation" class="alert alert_danger">
      <h2><%= pluralize(@task.errors.count, "件のエラーが発生しました") %>
      prohibited this task from being saved:</h2>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class ="field" >
    <%= form.label :name %>
    <%= form.text_field :name, id: :task_name %>
  </div>
  <div class="field">
    <%= form.label :detail %>
    <%= form.text_area :detail, id: :task_detail %>
  </div>
  <div class="field">
    <%= form.label :due %>
    <%= form.text_field :due, id: :task_due %>
  </div>
  <div class="field">
    <%= form.label :priority %>
    <%= form.text_field :priority, id: :task_priority %>
  </div>
  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status, id: :task_status %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
