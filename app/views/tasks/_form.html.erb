
<%= form_with(model: task, local: true) do |form| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "件のエラーが発生しました") %>
      prohibited this task from being saved:</h2>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class ="form-group" >
    <%= form.label :name %>
    <%= form.text_field :name, id: :task_name, class: "form-control", placeholder: "Enter name here", type:"string" %>
  </div>
  <div class ="form-group" >
    <%= form.label :detail %>
    <%= form.text_area :detail, id: :task_detail, class:"form-control", placeholder: "Enter details here", rows:"3" %>
  </div>
  <div class="form-group row">
    <%= form.label :due, class:"col-sm-3 col-form-label" %>
    <div class="col-sm-10">
      <%= form.date_select :due, startyear:Time.now.year,startmonth:Time.now.month, startday:Time.now.day, id: :task_due, class:"form-control"  %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :priority, class:"col-sm-3 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :priority, [["高",1],["中",2],["低",3]] , class:"form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :status, class:"col-sm-3 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select :status, ["未着手","着手中","完了"] %>
    </div>
  </div>
  <div class="action">
    <%= form.submit %>
  </div>
<% end %>
