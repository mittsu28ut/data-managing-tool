<div class="mt-4">
  <div class="span6 offset3">
    <%= form_for @user, :as => :user, :url => new_user_path, :method => :post do |f| %>

    <div class="form-group row">
      <%= f.label :name,"Username", class:"col-sm-3 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <%= show_field_error(@user,:name) %>
    </div>
    <div class="form-group row">
      <%= f.label :email, class:"col-sm-3 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :email, class:"form-control" %>
      </div>
      <%= show_field_error(@user,:email) %>
    </div>
    <div class="form-group row">
      <%= f.label :password, class:"col-sm-3 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, class:"form-control" %>
      </div>
      <%= show_field_error(@user,:password) %>
    </div>
    <div class="form-group row">
      <%= f.label :password_confirmation, "Confirmation",class:"col-sm-3 col-form-label" %>
      <%= f.password_field :password_confirmation, class:"form-control" %>
      <%= show_field_error(@user,:password_confirmation) %>
    </div>
    <div class="mt-3">
      <%= f.submit "Sign up", class: "btn btn-large btn-primary" %>
    </div>
  <% end %>
</div>
